<SimulationDisplay>:
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'    
        Graph:
            id: graph
            height: root.height*0.8
            width: root.width
            xlabel: 'X'
            ylabel: 'Y'
            x_ticks_minor: 5
            x_ticks_major: 25
            y_ticks_major: 1
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: -0
            xmax: 100
            ymin: -1
            ymax: 1
            background_color: [1,1,1,1]
            border_color: [0,0,0,0]
            #label_options: ('color' = [0,0,0,0])
        Slider:
            id: slider
            #height: root.heigth*0.2
            #width: root.width
            range: root.slider_range