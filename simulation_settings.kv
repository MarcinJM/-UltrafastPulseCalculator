<SliderWithMultipliers>:
    BoxLayout:
        width: root.width
        height: root.height
        pos: root.pos
        orientation: 'vertical'
        padding: 10
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: root.slider_name
                font_size: '20sp'
            Label:
                id: slider_display   
                font_size: '20sp'
            ToggleButton:
                id: button1
                group: root.slider_name
                text: root.button1_name
                state: 'down'
                font_size: '20sp'
                on_press: root.set_button1_multiplier()
            ToggleButton:
                id: button2
                group: root.slider_name
                text: root.button2_name
                font_size: '20sp'
                on_press: root.set_button2_multiplier()
        Slider:
            id: slider                 
            font_size: '20sp'
    
<PulseWidthSlider@SliderWithMultipliers>:
    button1_name: 'fs'
    button1_range: (10.0,3000.0)
    button1_step: 10.0
    button1_multiplier: 1e-15
    button2_name: 'ps'
    button2_range: (1.0,100.0)
    button2_step: 1.0
    button2_multiplier:  1e-12  
    slider_name: 'Pulse width'


<PulsePowerSlider@SliderWithMultipliers>:
    button1_name: 'W'
    button1_multiplier: 1.0
    button1_range: (10.0,3000.0)
    button1_step: 10.0
    button2_name: 'kW'
    button2_range: (1.0,100.0)
    button2_step: 1.0
    button2_multiplier: 1e3
    slider_name: 'Peak Power'

<FiberLengthSlider@SliderWithMultipliers>:
    button1_name: 'cm'
    button1_multilier: 1.0e-2
    button1_range: (1.0,300.0)
    button1_step: 1.0
    button2_name: 'm'
    button2_range: (1.0,1000.0)
    button2_step: 1.0
    button2_multiplier: 1.0
    slider_name: 'Fiber Length'

<ButtonDropDown>:
    size_hint_y: None
    font_size: '20sp'
    height: 44

<MainButtonDropDown>:
    font_size: '20sp'
    
        
    
