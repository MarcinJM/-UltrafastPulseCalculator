<SliderWithMultipliers>:
    BoxLayout:
        width: root.width
        height: root.height
        pos: root.pos
        orientation: 'vertical'
        padding: 10
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: root.slider_name
                font_size: '20sp'
            Label:
                id: slider_display   
                font_size: '20sp'
            ToggleButton:
                id: button1
                group: root.slider_name
                text: root.button1_name
                state: 'down'
                font_size: '20sp'
                on_press: root.set_button1_multiplier()
            ToggleButton:
                id: button2
                group: root.slider_name
                text: root.button2_name
                font_size: '20sp'
                on_press: root.set_button2_multiplier()
        Slider:
            id: slider                 
            font_size: '20sp'
    


<ButtonDropDown>:
    size_hint_y: None
    font_size: '20sp'
    height: 44

<MainButtonDropDown>:
    font_size: '20sp' 
        
    
<FiberDropDown>:


<SimulationSettings>:
    BoxLayout:
        width: root.width
        height: root.height
        pos:root.pos
        orientation: 'vertical'
        BoxLayout:
            padding: 10
            spacing: 10
            orientation: 'vertical'
            PulseWidthSlider:
                simulation_parameters: root.simulation_parameters
            PulsePowerSlider:
                simulation_parameters: root.simulation_parameters
            FiberLengthSlider:
                simulation_parameters: root.simulation_parameters
            BoxLayout:
                orientation: 'horizontal'                
                ToggleButton:
                    group: 'pulse_shape'
                    text: 'Soliton'
                    state: 'down'
                    font_size: '20sp'
                    on_press: root.simulation_parameters.pulse_shape = 'soliton'
                ToggleButton:
                    group: 'pulse_shape'
                    text: 'Gaussian'
                    font_size: '20sp'
                    on_press: root.simulation_parameters.pulse_shape = 'gaussian'
                MainButtonDropDown:
                    simulation_parameters: root.simulation_parameters
                    multiline: True
                    text: 'Fiber type \n' + '@ 1550 nm'
                    
                
  
            
            

