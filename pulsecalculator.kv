<MenuButton@Button>:
    font_size: '40sp'
    bold: True
    text: 'Menu'
    on_press:  root.app.goto_screen("menu")

<RunButton@Button>:
    font_size: '40sp'
    bold: True
    text: 'Run'
    on_press:  root.app.goto_screen("simulation_display")



<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Choose Category"
            font_size: '20sp'         
        Button:
            text: 'Bandwidth FWHM Conversion'
            font_size: '20sp'
            on_press: root.app.goto_screen("bandwidth")
        Button:
            text: 'Power'
            font_size: '20sp'
            on_press: root.app.goto_screen("power")
        Button:
            text: 'NLS'
            font_size: '20sp'
            on_press: root.app.goto_screen("nls")
         