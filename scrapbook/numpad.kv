<NumPadButton@Button>:
    font_size: '40sp'
    bold: True
    

<Numpad>:
    BoxLayout:
        width: root.width
        height: root.height
        orientation: 'vertical'    
        BoxLayout:
            size_hint_y: 5
            orientation: 'vertical'
            BoxLayout:
                NumPadButton:
                    text: '7'
                    on_press:
                        root.input = root.input + '7'
                NumPadButton:
                    text: '8'
                    on_press:
                        root.input = root.input + '8'
                NumPadButton:
                    text: '9'
                    on_press:
                        root.input = root.input + '9'
            BoxLayout:
                NumPadButton:
                    text: '4'
                    on_press:
                        root.input = root.input + '4'
                NumPadButton:
                    text: '5'
                    on_press:
                        root.input = root.input + '5'
                NumPadButton:
                    text: '6'
                    on_press:
                        root.input = root.input + '6'
            BoxLayout:
                NumPadButton:
                    text: '1'
                    on_press:
                        root.input = root.input + '1'
                NumPadButton:
                    text: '2'
                    on_press:
                        root.input = root.input + '2'
                NumPadButton:
                    text: '3'
                    on_press:
                        root.input = root.input + '3'
            BoxLayout:
                NumPadButton:
                    text: '0'
                    on_press:
                        root.input = root.input + '0'
                NumPadButton:
                    text: '.'
                    on_press:
                        root.input = root.input + '.'
                NumPadButton:
                    text: 'del'
                    on_press:
                        root.input = root.input[:-1]
            BoxLayout:
                BoxLayout:
                    size_hint_x: 3
                    NumPadButton:
                        text: 'C'
                        on_press:
                            root.input = root.input = ''
                

<NumpadInput>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size 
    id: input     
    multiline: False
    font_size: '20sp'
    text:
    color: 0,0,0,1
  
   
